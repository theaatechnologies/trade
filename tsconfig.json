{
  "compilerOptions": {
    "lib": ["es6", "es2019"],
    "types": ["reflect-metadata", "node", "express", "jest"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "outDir": "./dist/src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist"]
}
